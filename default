server {

        root /var/www/html;

        index main.html index.htm index.nginx-debian.html;

        server_name up4soft-test.ddns.net;

        location / {
                try_files $uri $uri/ =404;
        }


        location /wordpress/ {

                alias /var/www/html/wordpress/;
                index index.php index.html index.htm;
                try_files $uri $uri/ /wordpress/index.php?$args;

        }


        location ~ \.php$ {
           include snippets/fastcgi-php.conf;
           fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
           fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
           include fastcgi_params;
       }

       location ~ /\.ht {
           deny all;
       }

       # Enable gzip compression
       gzip on;
       gzip_types text/css application/javascript image/svg+xml;
       gzip_vary on;


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/up4soft-test.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/up4soft-test.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = dimon-up4sost.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80 default_server;
        listen [::]:80 default_server;

        server_name dimon-up4sost.ddns.net;
    return 404; # managed by Certbot


}
